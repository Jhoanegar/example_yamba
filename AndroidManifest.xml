<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="examples.yamba"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="examples.yamba.StatusActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="examples.yamba.SettingsActivity"
            android:label="@string/action_settings" >
        </activity>
        <activity
            android:name="examples.yamba.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name=".RefreshService" />
        <provider android:name="examples.yamba.StatusProvider"
            android:authorities="examples.yamba.StatusProvider"
            android:exported="false" />
    </application>

</manifest>
